<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context='org.readium.r2.testapp.epub.EpubActivity'>

    <item
        android:id="@+id/search"
        android:icon="@drawable/baseline_search_white_24"
        android:title="@string/epubactivity_search"
        android:orderInCategory="20"
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:iconifiedByDefault="false"
        app:showAsAction="collapseActionView|always" />

    <item
        android:id="@+id/screen_reader"
        android:icon="@drawable/icon_audio"
        android:title="@string/epubactivity_read_aloud_start"
        android:orderInCategory="30"
        app:showAsAction="always"
        tools:ignore="AlwaysShowAction"/>

    <item
        android:id="@+id/settings"
        android:icon="@drawable/icon_settings"
        android:title="@string/epubactivity_settings"
        android:orderInCategory="80"
        app:showAsAction="always"
        tools:ignore="AlwaysShowAction"/>

</menu>